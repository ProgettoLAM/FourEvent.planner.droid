<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lam.project.foureventplannerdroid.CreateEventActivity"
    tools:showIn="@layout/activity_create_scrolling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_asterisk"
                    android:tint="@color/red" />

                <EditText
                    android:id="@+id/event_title"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_border_title"
                    android:textColorHint="@color/lightText"
                    android:textColor="@color/darkerText"
                    android:textSize="20sp"
                    android:hint="Titolo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/text_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tag"
                        android:paddingLeft="10dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/lightText"
                        android:textSize="16dp"/>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_asterisk"
                        android:tint="@color/red"
                        android:layout_alignParentLeft="true"/>

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/event_tag"
                        android:layout_width="200dp"
                        android:layout_height="42dp"
                        app:ms_arrow_tint="@color/colorAccent"
                        app:ms_text_color="@color/darkerText"
                        app:ms_dropdown_height="180dp"
                        android:textSize="14sp"
                        android:layout_alignBaseline="@id/text_tag"
                        android:layout_toRightOf="@id/text_tag"
                        android:layout_toEndOf="@id/text_tag" />

                    <TextView
                        android:id="@+id/event_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indirizzo"
                        android:textSize="16sp"
                        android:paddingRight="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/lightText"
                        android:layout_below="@id/event_tag" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_asterisk"
                        android:tint="@color/red"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="50dp"
                         />

                    <Button
                        android:id="@+id/btn_address"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_gps"
                        android:layout_toRightOf="@id/event_address"
                        android:layout_toEndOf="@id/event_address"
                        android:layout_alignBaseline="@id/event_address"
                        android:gravity="center"
                        android:textColor="@color/darkerText"
                        android:onClick="selectAddress"
                        android:layout_below="@id/text_tag"/>

                    <TextView
                        android:id="@+id/result_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:paddingLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@id/btn_address"
                        android:layout_toEndOf="@id/btn_address"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/lightText"
                        android:layout_below="@id/event_tag" />

                    <EditText
                        android:id="@+id/event_description"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/bottom_border_event"
                        android:textColorHint="@color/lightText"
                        android:textColor="@color/darkerText"
                        android:hint="Descrizione"
                        android:layout_below="@id/event_address"/>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_asterisk"
                        android:tint="@color/red"
                        android:layout_below="@id/result_address"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="20dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_asterisk"
                        android:tint="@color/red" />

                    <ImageView
                        android:id="@+id/date_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:id="@+id/event_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:text="Data di inizio"
                        android:textSize="16dp"
                        android:textColor="#999"/>

                    <TextView
                        android:id="@+id/event_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ora di inizio"
                        android:textSize="16dp"
                        android:textColor="#999"
                        android:visibility="invisible"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="16dp"
                        android:text="Data di fine"
                        android:textSize="16dp"
                        android:textColor="#999"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/event_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ora di fine"
                        android:textSize="16dp"
                        android:textColor="#999"
                        android:visibility="invisible"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_expand_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:drawableLeft="@drawable/ic_ticket"
                    android:onClick="expandablePrice"
                    android:paddingRight="10dp"
                    android:text="Biglietti e prezzo"
                    android:textColor="@color/darkerText"
                    style="?android:attr/borderlessButtonStyle"/>

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="20dp"
                    app:ael_duration="400"
                    app:ael_expanded="false">

                   <RelativeLayout
                       android:id="@+id/expandable_ticket"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:paddingLeft="8dp"
                       android:paddingRight="8dp">

                       <TextView
                           android:id="@+id/text_ticket"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="N° Biglietti"
                           android:layout_marginTop="37dp"
                           android:textSize="16sp"
                           android:paddingRight="16dp"
                           android:textColor="@color/lightText"/>

                       <NumberPicker
                           android:id="@+id/np"
                           android:layout_width="wrap_content"
                           android:layout_height="100dp"
                           android:layout_toRightOf="@id/text_ticket"
                           android:scaleY=".8"
                           android:scaleX=".8"
                           />

                       <TextView
                           android:id="@+id/text_price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Prezzo"
                           android:layout_marginTop="60dp"
                           android:layout_below="@id/text_ticket"
                           android:textSize="16sp"
                           android:textColor="@color/lightText"/>

                       <SeekBar
                           android:id="@+id/seekBar"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/text_price"
                           android:layout_marginTop="@dimen/activity_vertical_margin"
                           android:max="50"/>

                       <TextView
                           android:id="@+id/minPrice"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/seekBar"
                           android:text="0"
                           android:layout_marginLeft="12dp"
                           android:textSize="12dp"/>

                       <TextView
                           android:id="@+id/price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/seekBar"
                           android:layout_centerHorizontal="true"
                           android:text="0€"
                           android:textSize="14sp"
                           android:textColor="@color/darkerText"/>

                       <TextView
                           android:id="@+id/maxPrice"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/seekBar"
                           android:layout_alignParentRight="true"
                           android:text="50"
                           android:textSize="12dp"/>

                   </RelativeLayout>

                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                <Button
                    android:id="@+id/create_event"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="@color/darkerText"
                    android:padding="8dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="20dp"
                    android:text="Crea evento"
                    android:onClick="createEvent"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
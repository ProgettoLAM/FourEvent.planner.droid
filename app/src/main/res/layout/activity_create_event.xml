<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    tools:context="lam.project.foureventplannerdroid.CreateEventActivity">

    <EditText
        android:id="@+id/event_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_title"
        android:textColorHint="@color/lightText"
        android:textColor="@color/darkerText"
        android:hint="Titolo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

    <EditText
        android:id="@+id/event_tag"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/bottom_border_event"
        android:textColorHint="@color/lightText"
        android:textColor="@color/darkerText"
        android:hint="Tag" />

    <EditText
        android:id="@+id/event_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/bottom_border_event"
        android:textColorHint="@color/lightText"
        android:textColor="@color/darkerText"
        android:hint="Indirizzo" />

    <EditText
        android:id="@+id/event_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/bottom_border_event"
        android:textColorHint="@color/lightText"
        android:textColor="@color/darkerText"
        android:hint="Descrizione" />

    <LinearLayout
        android:id="@+id/date_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/event_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="Data di inizio"
            android:textSize="16dp"
            android:textColor="#999"/>

        <TextView
            android:id="@+id/event_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data di fine"
            android:textSize="16dp"
            android:textColor="#999"
            android:visibility="invisible"/>

    </LinearLayout>

    <EditText
        android:id="@+id/event_image"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/bottom_border_event"
        android:textColorHint="@color/lightText"
        android:textColor="@color/darkerText"
        android:hint="Immagine" />

    <Button
        android:id="@+id/create_event"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/darkerText"
        android:padding="8dp"
        android:layout_marginRight="6dp"
        android:text="Crea evento"
        android:onClick="createEvent"/>
    </LinearLayout>

</LinearLayout>

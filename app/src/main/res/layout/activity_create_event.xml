<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_event"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lam.project.foureventplannerdroid.CreateEventActivity">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_planner"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">

        <EditText
            android:id="@+id/event_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_title"
            android:textColorHint="@color/lightText"
            android:textColor="@color/darkerText"
            android:textSize="20sp"
            android:hint="Titolo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/text_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag"
                    android:paddingRight="8dp"
                    android:textColor="@color/lightText"
                    android:textSize="16dp"/>

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/event_tag"
                    android:layout_width="200dp"
                    android:layout_height="42dp"
                    app:ms_arrow_tint="@color/colorAccent"
                    app:ms_text_color="@color/darkerText"
                    app:ms_dropdown_height="180dp"
                    android:layout_alignBaseline="@id/text_tag"
                    android:layout_toRightOf="@id/text_tag"
                    android:layout_toEndOf="@id/text_tag" />

                <TextView
                    android:id="@+id/event_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indirizzo"
                    android:textSize="16sp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/lightText"
                    android:layout_below="@id/event_tag" />

                <Button
                    android:id="@+id/btn_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_gps"
                    android:layout_toRightOf="@id/event_address"
                    android:layout_toEndOf="@id/event_address"
                    android:layout_alignBaseline="@id/event_address"
                    android:gravity="center"
                    android:textColor="@color/darkerText"
                    android:onClick="selectAddress"
                    android:layout_below="@id/text_tag"/>

                <TextView
                    android:id="@+id/result_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:paddingLeft="16dp"
                    android:layout_toRightOf="@id/btn_address"
                    android:layout_toEndOf="@id/btn_address"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/lightText"
                    android:layout_below="@id/event_tag" />

                <EditText
                    android:id="@+id/event_description"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:background="@drawable/bottom_border_event"
                    android:textColorHint="@color/lightText"
                    android:textColor="@color/darkerText"
                    android:hint="Descrizione"
                    android:layout_below="@id/event_address"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/event_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:text="Data di inizio"
                    android:textSize="16dp"
                    android:textColor="#999"/>

                <TextView
                    android:id="@+id/event_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ora di inizio"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="16dp"
                    android:text="Data di fine"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/event_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ora di fine"
                    android:textSize="16dp"
                    android:textColor="#999"
                    android:visibility="invisible"/>

            </LinearLayout>


            <Button
                android:id="@+id/create_event"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/darkerText"
                android:padding="8dp"
                android:layout_marginRight="6dp"
                android:text="Crea evento"
                android:onClick="createEvent"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
